<div class="container mt-5">
  <h4>Databases</h4>
  <%= link_to 'Create', new_source_path, class: 'btn btn-sm btn-primary' %>
  <table class="table mt-5">
    <tr>
      <th>Name</th>
      <th>DB TYPE</th>
      <th>HOST</th>
      <th>Database Name</th>
      <th>Username</th>
      <th>Port</th>
      <th></th>
    </tr>
    <% @sources.each do |source| %>
      <tr>
        <td><%= source.name %></td>
        <td><%= source.db_type %></td>
        <td><%= source.host %></td>
        <td><%= source.database %></td>
        <td><%= source.username %></td>
        <td><%= source.port %></td>
        <td><%= link_to 'Edit', edit_source_path(source), class: 'btn btn-sm btn-primary' %></td>
      </tr>
    <% end %>
  </table>
</div>